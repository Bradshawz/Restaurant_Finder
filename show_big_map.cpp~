/* Read and print readme.txt on SD card */

#include <Adafruit_GFX.h>
#include <Adafruit_ST7735.h>
#include <SPI.h>
#include <SD.h>

#include "lcd_image.h"

// standard U of A library settings, assuming Atmel Mega SPI pins
#define SD_CS    5  // Chip select line for SD card
#define TFT_CS   6  // Chip select line for TFT display
#define TFT_DC   7  // Data/command line for TFT
#define TFT_RST  8  // Reset line for TFT (or connect to +5V)

Adafruit_ST7735 tft = Adafruit_ST7735(TFT_CS, TFT_DC, TFT_RST);

void setup() {
  tft.initR(INITR_BLACKTAB);
  Serial.begin(9600);
  
  // Initialize SD Card
  Serial.print("Initializing SD Card...");
  if (!SD.begin(SD_CS)) {
    Serial.println("failed");
    return;
  }
  Serial.print("OK!");
  
  tft.fillScreen(tft.Color565(255,255,0));

  lcd_image_t map_image = {"yeg-sm.lcd", 128, 128};
  lcd_image_draw(&map_image, &tft, 0, 0, 0, 0, 128, 128);
  

  File myFile = SD.open("readme.txt");
  if (myFile) {
    while (myFile.available()) {
      int c = myFile.read();
      if (c == '\n') {
	Serial.write('\r');
      }
      Serial.write(c);
    }
  } else {
    Serial.println("Could not open readme.txt");
  }


}

void loop() {

}
